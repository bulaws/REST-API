{% extends 'base.html.twig' %}

{% block body %}
    {% if articles %}
        <table  class="table table-striped">
            <thead>
            <tr>
                <th>Стаття</th>
                <th>Опис</th>
                <th>Дата</th>
            </tr>
            </thead>
            <tbody>
            {% for article in articles %}
                <tr>
                    <td>
                        <a href="/articles/{{ article.id }}"> {{ article.name }} </a>
                    </td>
                    <td> {{ article.text }} </td>
                    <td> {{ article.updateAt|date('Y-m-d H:i') }} </td>
                    <td><a href="/article/update/{{ article.id }}" class="btn btn-dark">Редагувати</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a href="/article/create" class="btn btn-light">Створити нову статтю</a>
    {% else %}
        <p>Статей не знайдено</p>
    {% endif %}
{% endblock %}